<body>
	<!-- Sidenav -->
	<% include ../../partials/sidebar %>
	<!-- Main content -->
	<div class="main-content">
		<!-- Top navbar -->
		<% include ../../partials/navbar %>
		<!-- Header -->
		<% include header %>

		<!-- Page content -->
		<div class="container-fluid mt--7">
			<div class="row mt-3">

				<div class="masonry-item col-6">
					<div class="card shadow">
						<div class="card-header border-0">
							<div class="row align-items-center">
								<div class="col">
									<h3 class="mb-0"><%= (page && page.subtitle) || 'Create or Update' %></h3>
								</div>
							</div>
						</div>

						<div class="card-body">

							<form method="POST" action="<%- current.url + '/add-edit' %>" id="ticket-form">
								<input type="hidden" class="form-control form-control-alternative" name="id" placeholder="Text" value="<%= edit && edit.id %>">

								<div class="row">
									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Username</label>
											<input type="text" class="form-control form-control-alternative" name="username" placeholder="Name" value="<%= edit && edit.username %>" autocomplete="off" required <%= edit ? 'readonly' : '' %>>
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Name</label>
											<input type="text" class="form-control form-control-alternative" name="name" placeholder="Name" value="<%= edit && edit.name %>" autocomplete="off" required>
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Address</label>
											<input type="text" class="form-control form-control-alternative" name="address" placeholder="Address" value="<%= edit && edit.address %>" autocomplete="off" required>
										</div>
									</div>
								</div>

								<div class="row">
									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Description</label>
											<input type="text" class="form-control form-control-alternative" name="description" placeholder="Notes" value="<%= edit && edit.description %>" autocomplete="off" required>
										</div>
									</div>
								</div>

								<div class="row mt-4">
									<div class="col">
										<label class="form-control-label">Set Login Password</label>
										<small class="mt-5"><%= edit ? '(Leave both empty to keep current password)' : '' %></small>
										</hr>
									</div>
								</div>

								<div class="row mb-4">
									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Password</label>
											<input type="password" class="form-control form-control-alternative" name="password" id="password" placeholder="Password" autocomplete="off"  <%= edit ? '' : 'required' %>>
										</div>
									</div>

									<div class="col">
										<div class="form-group">
											<label class="form-control-label" for="input-name">Confirm Password</label>
											<input type="password" class="form-control form-control-alternative" name="confirm-password" id="confirm-password" placeholder="Confirm Password" autocomplete="off" <%= edit ? '' : 'required' %>>
										</div>
									</div>

								</div>

								<div class="row mt-2">
									<div class="col">
										<a href="<%- current.url %>" class="btn btnl-lg btn-block btn-danger">Back</a>
									</div>

									<div class="col">
										<button class="btn btnl-lg btn-block btn-primary submit-button validate-passwords">Save</button>
									</div>
								</div>

							</form>
						</div>
					</div>
				</div>

			</div>

			<!-- Modal -->
			<div class="modal fade" id="package-contents" tabindex="-1" role="dialog" aria-labelledby="Package Contents" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h2 class="modal-title">Package Contents</h2>
						</div>
						<div class="modal-body">
							<div class="container-fluid">
								...
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary" id="save-package-contents">Save changes</button>
						</div>
						</div>
				</div>
			</div>

			<!-- Footer -->
			<% include ../../partials/footer %>
		</div>
	</div>

	<!-- Include scripts -->
	<% include ../../partials/scripts %>
	<script>
		console.log(<%- JSON.stringify(edit) %>);
	</script>
</body>
