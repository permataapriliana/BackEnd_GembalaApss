<body>
	<!-- Sidenav -->
	<% include ../../partials/sidebar %>
	<!-- Main content -->
	<div class="main-content">
		<!-- Top navbar -->
		<% include ../../partials/navbar %>
		<!-- Header -->
		<% include header %>

		<!-- Page content -->
		<div class="container-fluid mt--7">
			<div class="row mt-3">

				<div class="masonry-item col-12">
					<div class="card shadow">
						<div class="card-header border-0">
							<div class="row align-items-center">
								<div class="col">
									<h3 class="mb-0">#</h3>
								</div>
								<div class="col">
									<a href="<%- current.url + '/create' %>" class="btn btn-primary float-right">Create New</a>
								</div>
							</div>
						</div>

						<div class="card-body table-responsive">

							<table class="table table-hover datatables">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
										<th>Address</th>
										<th>Description</th>
										<th></th>
									</tr>
								</thead>

								<tbody>
									<% let index = 1;
									for(const item of _customers){ %>
									<tr>
										<td><%= index++ %></td>
										<td><%= item.name %></td>
										<td><%= item.address %></td>
										<td><%= item.description %></td>
										<td>
											<a href="<%- current.url + '/tickets/' + hashids.encode(item.id) %>" class="btn btn-sm btn-primary">TICKET</a>
											<a href="<%- current.url + '/edit/' + hashids.encode(item.id) %>" class="btn btn-sm btn-success">EDIT</a>
										</td>
									</tr>
									<% } %>
								</tbody>

							</table>

						</div>
					</div>
				</div>

			</div>

			<!-- Footer -->
			<% include ../../partials/footer %>
		</div>
	</div>

	<!-- Include scripts -->
	<% include ../../partials/scripts %>

</body>
